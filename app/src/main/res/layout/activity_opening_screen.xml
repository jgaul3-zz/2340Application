<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.cs2340.cs2340application.OpeningScreen">

    <TextView
        android:layout_width="227dp"
        android:layout_height="43dp"
        android:text="Welcome to our application!"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105" />

    <Button
        android:id="@+id/loginUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap here to login"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="183dp" />

    <Button
        android:id="@+id/loginGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login as guest"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="389dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To use the app without a username:"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="371dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you have a username and password:"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="151dp" />

</android.support.constraint.ConstraintLayout>
